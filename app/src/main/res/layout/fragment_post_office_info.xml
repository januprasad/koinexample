<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.jk.koin_example.fragment.PostOfficeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/pinCode_Label"
        android:textSize="9pt"
        android:typeface="sans"
        android:textColor="@color/wh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/pin_code_input" />

    <EditText
        android:paddingStart="10dp"
        android:id="@+id/editText_pinCode"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintTop_toBottomOf="@id/pinCode_Label" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button"
        android:text="Search"
        android:onClick="@{() -> viewModel.getPostOfficeResponse()}"
        android:textColor="@color/wh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_pinCode" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>